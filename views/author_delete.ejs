<%- include("header"); -%>

<h1><%= title %>: <%= author.name %></h1>
<p><%= author.lifespan_long %></p>

<% if (books.length) { %>
    <p>Delete the following books before attempting to delete this author:</p>

    <div style="margin-left: 20px; margin-top:20px">
    <h4>Books</h4>
    <dl>
        <% for (const book of books) { %>
            <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
            <dd><%= book.summary %></dd>
        <% } %>
    </dl>
</div>
<% } else { %>
    <p>Do you really want to delete this Author?</p>
    <form action="" method="post">
        <div class="form-group">
            <input type="hidden" id="authorid" class="form-control" name="authorid" value="<%= author._id %>">
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
    </form>
<% } %>

<%- include("footer"); -%>